@model MiPrimeraWebBLL.Dtos.CarroDto;


<div class="modal fade" id="modalEditarCarro" tabindex="-1" aria-labelledby="modalEditarCarroLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarCarroLabel">Editar Carro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarCarro" asp-action="ActualizarCarro">
                    <input type="hidden" asp-for="Id" id="CarroId" />
                    <div class="mb-3">
                        <label for="Marca" class="form-label">Marca</label>
                        <input type="text" class="form-control" id="Marca" name="Marca" required />
                    </div>
                    <div class="mb-3">
                        <label for="Modelo" class="form-label">Modelo</label>
                        <input type="text" class="form-control" id="Modelo" name="Modelo" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnEditarCarro">Editar Carro</button>
            </div>
        </div>
    </div>
</div>