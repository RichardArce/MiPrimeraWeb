@model MiPrimeraWebBLL.Dtos.CarroDto;


<div class="modal fade" id="modalCrearCarro" tabindex="-1" aria-labelledby="modalCrearCarroLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCrearCarroLabel">Crear Carro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formCrearCarro" asp-action="AgregarCarro">
                    <div class="mb-3">
                        <label asp-for="Marca" class="form-label">Marca</label>
                        <input asp-for="Marca" type="text" class="form-control" id="Marca" name="Marca" required />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Modelo" class="form-label">Modelo</label>
                        <input asp-for="Modelo" type="text" class="form-control" id="Modelo" name="Modelo" required />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarCarro">Guardar Carro</button>
            </div>
        </div>
    </div>
</div>